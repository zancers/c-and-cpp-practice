#include <iostream>
using namespace std;

int main(){
        int n,i,j,row;
        char ch;
        cin >> n >> ch;
        row = n/2 + n%2;
        for(i = 0; i < row; i ++){
                for(j = 0; j < n; j ++){
                        if(i == 0 || i == row-1){
                                cout << ch;
                        }
                        else{
                                if(j == 0 || j == n - 1){
                                        cout << ch;
                                }
                                else{
                                        cout << ' ';
                                }
                        }
                }
                cout << endl;
        }
        return 0;
}
